{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "lib": [
      "DOM",
      "WebWorker",
      "ES2015",
      "ES2016",
      "ES2017"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "listFiles": false,
    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "noEmitOnError": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ]
}
